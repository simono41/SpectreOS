[Trigger]
Operation = Remove
Operation = Upgrade
Type = Package
Target = linux
Target = linux-hardened
Target = linux-mainline

[Action]
Depends = coreutils
Depends = bash
When = PostTransaction
Exec = /usr/bin/bash -c '[[ -d /usr/lib/modules/$(uname -r) ]] || ln -s /tmp/$(uname -r) /usr/lib/modules/$(uname -r)'
